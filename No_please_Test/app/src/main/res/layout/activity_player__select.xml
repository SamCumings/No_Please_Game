<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sam.no_please_test.Player_Select"
    android:weightSum="1"
    android:background="@drawable/background">

    <TextView
        android:text="@string/Pass_and_play_player_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the Number of Players for Your Game"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#ff20a1ff" />

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_three_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Players"
            android:onClick="onRadioButtonClicked"
            android:textColor="#ff20a1ff"
            android:buttonTint="#ff20a1ff" />
        <RadioButton android:id="@+id/radio_four_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Players"
            android:onClick="onRadioButtonClicked"
            android:textColor="#ff20a1ff"
            android:buttonTint="#ff20a1ff" />
        <RadioButton android:id="@+id/radio_five_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Players"
            android:onClick="onRadioButtonClicked"
            android:buttonTint="#ff20a1ff"
            android:textColor="#ff20a1ff" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Player1_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="@string/hint1"
            android:textColorHint="#5c20a1ff"
            android:inputType="textPersonName"
            android:textColor="#ff20a1ff" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Player2_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="@string/hint2"
            android:inputType="textPersonName"
            android:textColor="#ff20a1ff"
            android:textColorHint="#5c20a1ff" />
        <ToggleButton
            android:id="@+id/toggle_AI_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="AI"
            android:textOff="Human"
            android:onClick="onToggleClicked_2"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:textColor="#e7000000"
            android:checked="false"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Player3_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="@string/hint3"
            android:inputType="textPersonName"
            android:textColor="#ff20a1ff"
            android:textColorHint="#5c20a1ff" />
        <ToggleButton
            android:id="@+id/toggle_AI_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="AI"
            android:textOff="Human"
            android:onClick="onToggleClicked_3"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:textColor="#e7000000"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Player4_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="@string/hint4"
            android:inputType="textPersonName"
            android:textColor="#ff20a1ff"
            android:textColorHint="#5c20a1ff" />
        <ToggleButton
            android:id="@+id/toggle_AI_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="AI"
            android:textOff="Human"
            android:onClick="onToggleClicked_4"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:textColor="#e7000000"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Player5_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="@string/hint5"
            android:inputType="textPersonName"
            android:textColor="#ff20a1ff"
            android:textColorHint="#5c20a1ff" />
        <ToggleButton
            android:id="@+id/toggle_AI_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="AI"
            android:textOff="Human"
            android:onClick="onToggleClicked_5"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:textColor="#e7000000"
            android:visibility="invisible" />

    </LinearLayout>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/button"
        android:padding="10dp"
        android:textColor="#e7000000"
        android:background="@drawable/mybutton"
        android:text="@string/title_activity_go_to_game"
        android:textSize="20dp"
        android:onClick="go_to_game"


    />


</LinearLayout>