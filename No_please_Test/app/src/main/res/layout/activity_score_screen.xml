<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sam.no_please_test.score_screen"
    android:background="@drawable/background">

  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Player1"
            android:text="@string/PL1SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@+id/Player1"
            android:id="@+id/Player1_score"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Player2"
            android:text="Player 2 score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@+id/Player2"
            android:id="@+id/Player2_score"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Player3"
            android:text="Player 3 score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@+id/Player3"
            android:id="@+id/Player3_score"
            android:text="This is a really long test text that is only there to check to see how this handles wrapping replace soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Player4"
            android:text="Player 4 score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:visibility="invisible"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@+id/Player4"
            android:id="@+id/Player4_score"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:visibility="invisible"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Player5"
            android:text="Player 5 score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:visibility="invisible"
            android:textSize="20dp" />
        <TextView
            android:layout_toRightOf="@+id/Player5"
            android:id="@+id/Player5_score"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:visibility="invisible"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Winner: "
            android:textColor="#ff20a1ff"
            android:gravity="center_vertical"
            android:textSize="40dp"
            />
        <TextView
            android:id="@+id/winner_name"
            android:layout_below="@id/winner"
            android:layout_centerHorizontal="true"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff20a1ff"
            android:textSize="40dp"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu"
            android:onClick="activity_main"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:textColor="#e7000000"
            android:layout_gravity="center_horizontal|bottom"
            />

        </LinearLayout>


</LinearLayout>
