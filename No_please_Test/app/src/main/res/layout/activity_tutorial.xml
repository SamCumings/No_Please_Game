<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sam.no_please_test.Tutorial"
    android:background="@drawable/background"
    android:weightSum="1"
    android:id="@+id/tutorial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tutorialScreenTitle"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff20a1ff"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:onClick="back_to_main_menu"
        android:id="@+id/mainMenu"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="#e7000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/howToPlayTitle"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:textColor="#ff20a1ff"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="342dp"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:fillViewport="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:textColor="#ffffffff"
            android:text="@string/gameRules"
            android:editable="false" />
    </ScrollView>

</LinearLayout>
